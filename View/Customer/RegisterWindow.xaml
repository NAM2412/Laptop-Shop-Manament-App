<Window x:Class="QuanLyCuaHangDienTu.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:QuanLyCuaHangDienTu.UserControlBar"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:QuanLyCuaHangDienTu"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Name="registerwindow"
        Title="ĐĂNG KÝ"
        Height="650"
        Width="1100"
        ResizeMode="NoResize"
        Style="{StaticResource WinAll}">

    <Border CornerRadius="25">
        <Border.Background>
            <ImageBrush ImageSource="../../ResourceXAML/IMG/Admin/Background.jpg" />
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*"></ColumnDefinition>
                <ColumnDefinition Width="1.2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  Grid.ColumnSpan="3">
                <uc:ControlBarCus Tag="{Binding Title, ElementName=registerwindow}"></uc:ControlBarCus>
            </Grid>


            <Border x:Name="bdImg"
                    Grid.Column="0"
                    Grid.Row="0"
                    Width="200"
                    Height="300"
                    ToolTip="Avatar"
                    CornerRadius="25"
                    HorizontalAlignment="Center"
                    MouseLeftButtonDown="bdImg_MouseLeftButtonDown">
                <Border.Background>
                    <ImageBrush  x:Name="imgAvt"
                                 ImageSource="../../ResourceXAML/IMG/Customer/customer1.png"
                                 Stretch="UniformToFill" />
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      Direction="270"
                                      ShadowDepth="1"
                                      BlurRadius="10" />
                </Border.Effect>
            </Border>

            <TextBox x:Name="tbName"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Margin="10,0,70,280"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="HỌ VÀ TÊN"
                     materialDesign:HintAssist.HintOpacity="1">
                <TextBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="FontWeight"
                                Value="Bold" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label x:Name="lbDateborn"
                   Grid.Column="1"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="7,0,50,130"
                   Foreground="Black">NGÀY SINH
            </Label>
            <DatePicker x:Name="dpDateborn"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="10,0,70,80"
                        materialDesign:HintAssist.Hint="DAY/MONTH/YEAR"
                        materialDesign:CalendarAssist.IsHeaderVisible="False"
                        FontStyle="Italic">
                <DatePicker.SelectedDate>
                    <Binding Path="FutureValidatingDate"
                             UpdateSourceTrigger="PropertyChanged">

                    </Binding>
                </DatePicker.SelectedDate>
            </DatePicker>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="10,116,70,0">
                <TextBox x:Name="tbAcc"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="TÀI KHOẢN"
                         materialDesign:HintAssist.HintOpacity="1"
                         TextChanged="tbAcc_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type materialDesign:SmartHint}">
                            <Setter Property="FontWeight"
                                    Value="Bold" />
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="lbAcc"
                       FontFamily="Segoe UI"
                       FontSize="13"
                       Foreground="{StaticResource Error}"
                       Visibility="Hidden">
                    Tài khoản đã tồn tại
                </Label>
            </StackPanel>

            <PasswordBox x:Name="pwbPass"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         Margin="10,280,70,0"
                         MinWidth="260"
                         MaxLength="30"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox }"
                         materialDesign:HintAssist.Hint="MẬT KHẨU"
                         materialDesign:HintAssist.HintOpacity="1">
                <PasswordBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="FontWeight"
                                Value="Bold" />
                    </Style>
                </PasswordBox.Resources>
            </PasswordBox>
            <TextBox x:Name="tbPass"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Margin="10,280,70,0"
                     MinWidth="260"
                     Visibility="Collapsed"></TextBox>
            <Button x:Name="btPass"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="10,280,70,0"
                    Width="48"
                    Style="{StaticResource MaterialDesignFlatLightButton}"
                    BorderBrush="{x:Null}"
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    PreviewMouseDown="btPass_PreviewMouseDown"
                    PreviewMouseUp="btPass_PreviewMouseUp"
                    MouseLeave="btPass_MouseLeave">
                <materialDesign:PackIcon Kind="Eye" />
            </Button>


            <StackPanel Grid.Column="2"
                        VerticalAlignment="Center"
                        Margin="10,306,70,0">
                <PasswordBox x:Name="pwbRepass"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox }"
                             materialDesign:HintAssist.Hint="NHẬP LẠI MẬT KHẨU"
                             materialDesign:HintAssist.HintOpacity="1"
                             PasswordChanged="pwbRepass_PasswordChanged">
                    <PasswordBox.Resources>
                        <Style TargetType="{x:Type materialDesign:SmartHint}">
                            <Setter Property="FontWeight"
                                    Value="Bold" />
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>
                <Label x:Name="lbRepass"
                       FontFamily="Segoe UI"
                       FontSize="13"
                       Foreground="{StaticResource Error}"
                       Visibility="Hidden">
                    Mật khẩu không giống nhau
                </Label>
            </StackPanel>

            <Label x:Name="lbSex"
                   Grid.Column="2"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="7,0,50,130"
                   Foreground="Black">GIỚI TÍNH
            </Label>
            <ComboBox x:Name="cbSex"
                      Grid.Column="2"
                      VerticalAlignment="Center"
                      Margin="10,0,70,80"
                      SelectedIndex="0">
                <ComboBoxItem Content="Nam" />
                <ComboBoxItem Content="Nữ" />
                <ComboBoxItem Content="Khác" />
            </ComboBox>

            <Button x:Name="btRgter"
                    Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    VerticalAlignment="Top"
                    Height="45"
                    FontSize="24"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Content="ĐĂNG KÝ"
                    Margin="420,10,420,0"
                    Foreground="Blue"
                    BorderBrush="Black"
                    Click="btRgter_Click">
                <Button.OpacityMask>
                    <LinearGradientBrush EndPoint="1,1"
                                         StartPoint="0.5,1">
                        <GradientStop Color="#FFEBEBEB" />
                        <GradientStop Color="#FFEBEBEB"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Button.OpacityMask>
            </Button>

            <TextBlock  x:Name="tbOthers"
                        Grid.Column="0"
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        VerticalAlignment="Top"
                        Margin="0,80,0,0"
                        Width="250"
                        HorizontalAlignment="Center"
                        TextAlignment="Center">
            ĐÃ CÓ TÀI KHOẢN?
                    <LineBreak />
                    <Hyperlink x:Name="hpLogin"
                               Foreground="{StaticResource ThemeRedBrush}"
                               Click="Register_Click"
                               FontWeight="Bold">
                        ĐĂNG NHẬP
                    </Hyperlink>
            </TextBlock>
        </Grid>
    </Border>
</Window>
