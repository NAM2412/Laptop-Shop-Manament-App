                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            Margin="0,0,5,0" Width="105" Height="40">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin"
                                    Value="0"></Setter>
                            <Setter Property="Width"
                                    Value="50"></Setter>
                        </Style>
                    </StackPanel.Resources>
                    <Button x:Name="btMinimize"
                            BorderBrush="Transparent"
                            Command="{Binding MinimizeWindowCommand}"
                            CommandParameter="{Binding ElementName=AEControlBar}"
                            ToolBar.OverflowMode="AsNeeded"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Style="{StaticResource MaterialDesignFlatDarkButton}"
                            ToolTip="Minimize"
                            Background="Yellow"
                            Width="20"
                            Height="20"
                            materialDesign:ButtonAssist.CornerRadius="15">
                    </Button>
                    <Button x:Name="btMaximize"
                            BorderBrush="Transparent"
                            Command="{Binding MaximizeWindowCommand}"
                            CommandParameter="{Binding ElementName=AEControlBar}"
                            ToolBar.OverflowMode="AsNeeded"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Style="{StaticResource MaterialDesignFlatDarkButton}"
                            ToolTip="Maximize"
                            Background="Green"
                            Width="20"
                            Height="20"
                            materialDesign:ButtonAssist.CornerRadius="15">
                    </Button>
                    <Button x:Name="btClose"
                            BorderBrush="Transparent"
                            Command="{Binding CloseWindowCommand}"
                            CommandParameter="{Binding ElementName=AEControlBar}"
                            ToolBar.OverflowMode="AsNeeded"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            Style="{StaticResource MaterialDesignFlatDarkButton}"
                            ToolTip="Close"
                            Background="red"
                            Width="20"
                            Height="20"
                            materialDesign:ButtonAssist.CornerRadius="15">
                    </Button>
                </StackPanel>
                <StackPanel DockPanel.Dock="Left" Margin="105,0,0,0">
                    <TextBlock FontFamily="Sitka Subheading"
                           FontSize="27"
                           FontWeight="Bold"
                           Text="{Binding Tag, ElementName=AEControlBar}"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0,8,0,0"
                            />
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>

